<p id="notice"><%= notice %></p>
<div style="padding:10px;margin-left:30px;text-transform:uppercase;
">
  <%if current_user.role == "seller" %>
  <h1 ><%= current_user.store.name%> </h1>
    <%end %>
</div>
<!-- cart-main-area start -->
<div class="cart-main-area ptb--100 bg__white">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <form action="#">
          <div class="table-content table-responsive">
            <table class="table table-bordered table-sm table-striped">
              <thead>
              <tr>
                <th class="product-thumbnail">Order Id</th>
                <th class="product-name">Order Date </th>
                <th class="product-category">Order Info </th>
                
                <th class="product-store">Order Status</th>
                <%if current_user.role == "seller" %>

              <th class="product-actions">Actions</th>
                  <%end %>

              </tr>
              </thead>
              <tbody>
              <% @orders.each do |order| %>
              <tr>
              <td class="product-category"><%=order.id%></td>
              <td class="product-category"><%=order.created_at%></td>
              
              <td>
              <table class="table table-sm table-borderless table-nostriped">
              <th class="product-brand">Product</th>
              <th class="product-brand">Ordered Quantity</th>
              <th class="product-brand">InStock</th>
              <%order.order_products.each do |item| %>
              <tr>
                      <td  class="product-quantity"><%=item.product.name %> </td>
                      <td class="product-quantity"><%=item.quantity %> </td>
                        <td class="product-quantity"><%=item.product.instock_quantity %> </td>
                              
                      </tr>
                      <%end%>
         
                      </table>
                  </td>
                  <td class="product-subtotal"><%=order.status %></td>

              </tr>
              <%end%>

              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
